[
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-c": "terminal::Copy",
      "ctrl-v": "terminal::Paste",
      "shift-ctrl-c": ["terminal::SendKeystroke", "ctrl-c"],
      "ctrl-alt-c": ["terminal::SendKeystroke", "ctrl-c"]
    }
  },
  {
    "context": "Terminal || Workspace || Editor && vim_mode == normal && !VimWaiting && !menu",
    "bindings": {
      // put key-bindings here if you want them to work only in normal mode
      "alt-g": ["task:spawn", "Git-TUI-Integration"]
    }
  }
]
